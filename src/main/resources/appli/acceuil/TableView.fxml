<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="appli.acceuil.TableController"
      prefHeight="720.0" prefWidth="1080.0"
      alignment="CENTER"
      spacing="10">

   <TableView fx:id="tableau" onMouseClicked="#cliqueTableauEvent"
              prefHeight="650.0" prefWidth="1000.0" />

   <Button fx:id="supprimerBtn" disable="true" onAction="#supprimerUtilisateur" prefHeight="25.0" prefWidth="250.0" text="SUPPRIMER" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" />
</VBox>
